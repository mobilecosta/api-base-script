{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "devCommand": "npm run dev",
  "builds": [
    {
      "src": "src/api/index.ts",
      "use": "@vercel/node@3.x"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/api/index.ts"
    },
    {
      "src": "/api-docs(.*)",
      "dest": "src/api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "src/api/index.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  }
}
